# ============================================================================
# Основные настройки бота
# ============================================================================

# Токен Telegram бота (получить у @BotFather)
BOT_TOKEN=your_telegram_bot_token_here

# Мастер-ключ для шифрования данных пользователей (32 байта в hex формате)
# Генерируется командой: python -c "import secrets; print(secrets.token_hex(32))"
MASTER_KEY=your_32_byte_hex_master_key_here

# ID администратора Telegram (для команд /get_db, /get_invites, /delete_user, /support)
# Можно получить у @userinfobot
ADMIN_TELEGRAM_ID=0

# ============================================================================
# Настройки блокчейна (BNB Chain)
# ============================================================================

# Production RPC URL (BNB Chain Mainnet)
RPC_URL=https://bsc-dataseed.binance.org/

# Test RPC URL (BNB Chain Testnet)
RPC_URL_TEST=https://data-seed-prebsc-1-s1.binance.org:8545/

# ============================================================================
# Настройки API
# ============================================================================

API_KEY=your_predictfun_api_key

# Production API URL
API_BASE_URL=https://api.predict.fun

# Test API URL
API_BASE_URL_TEST=https://api-testnet.predict.fun

# ============================================================================
# Режим тестирования
# ============================================================================

# TEST_MODE: включить тестовый режим (использует тестовый API и testnet)
# true - тестовый режим (testnet + test API)
# false или не указано - продакшн режим (mainnet + production API)
# При TEST_MODE=true автоматически используются:
#   - Chain ID 97 (BNB Testnet) вместо 56 (BNB Mainnet)
#   - Тестовый URL API (если указан в API_BASE_URL)
TEST_MODE=false

# ============================================================================
# Примечания
# ============================================================================

# 1. Скопируйте этот файл в .env и заполните все необходимые значения
# 2. НЕ коммитьте .env в git (он уже в .gitignore)
# 3. Для тестового режима установите TEST_MODE=true и используйте:
#    - Testnet RPC URL (https://data-seed-prebsc-1-s1.binance.org:8545/)
#    - Тестовый API URL в API_BASE_URL
# 4. TEST_MODE влияет на:
#    - Chain ID для SDK (56 для mainnet, 97 для testnet)
# 5. MASTER_KEY должен быть 32 байта (64 символа hex) для AES-256 шифрования